<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.decorator.Controller" style="-fx-background-color: #fafafa; -fx-padding: 25px;">
    <HBox spacing="30" alignment="CENTER">
        <!-- VBox for checkboxes and buttons on the left side -->
        <VBox alignment="TOP_CENTER" prefHeight="160.0" prefWidth="250.0" spacing="20">
            <CheckBox fx:id="starCheckBox" text="Add a star" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;" onAction="#toggleStar"/>
            <CheckBox fx:id="rectanglesCheckBox" text="Add a rectangular" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;" onAction="#toggleRectangles"/>
            <CheckBox fx:id="circlesCheckBox" text="Add a circle" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;" onAction="#toggleCircles"/>

            <!-- Color Picker for decoration color -->
            <ColorPicker fx:id="colorPicker" style="-fx-font-size: 16px;"/>

            <!-- Action buttons -->
            <HBox alignment="CENTER" spacing="25" prefWidth="600.0">
                <Button prefWidth="260.0" onAction="#removeAllDecorations" text="Remove all decorations"
                        style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 15px; -fx-padding: 12px; -fx-border-radius: 5px; -fx-background-radius: 5px;" />

                <Button fx:id="undoButton" prefWidth="260.0" onAction="#undoLastDecoration" text="Undo"
                        style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 15px; -fx-padding: 12px; -fx-border-radius: 5px; -fx-background-radius: 5px;" />
            </HBox>




            <Label fx:id="statusLabel" text="Status: Ready" style="-fx-font-size: 15px; -fx-font-family: 'Arial'; -fx-text-fill: #333333; font-weight: bold;"/>
        </VBox>

        <!-- Pane for the tree and decorations -->
        <Pane fx:id="paneTree" prefHeight="600" prefWidth="550.0"
              style="-fx-background-color: white; border: 2px solid #999; border-radius: 10px;"
              onMouseClicked="#handleMouseClick"/>
    </HBox>
</VBox>
